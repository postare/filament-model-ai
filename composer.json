{
    "name": "postare/filament-model-ai",
    "description": "Integrate AI in FilamentPHP, leveraging model data for smart commands.",
    "type": "library",
    "version": "1.0.0",
    "keywords": [
        "filamentphp",
        "laravel",
        "openai",
        "plugin"
    ],
    "homepage": "https://github.com/postare/filament-model-ai",
    "support": {
        "issues": "https://github.com/postare/filament-model-ai/issues",
        "source": "https://github.com/postare/filament-model-ai"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Francesco Apruzzese",
            "email": "inerba@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "illuminate/contracts": "^10.0",
        "openai-php/laravel": "^0.7.8",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Postare\\ModelAi\\": "src/",
            "Postare\\ModelAi\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Postare\\ModelAi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Postare\\ModelAi\\ModelAiServiceProvider"
            ],
            "aliases": {
                "ModelAi": "Postare\\ModelAi\\Facades\\ModelAi"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
